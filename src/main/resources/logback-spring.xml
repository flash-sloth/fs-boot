<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <include resource="logback/defaults-prod.xml"/>

    <!-- 基础服务 -->
    <logger name="top.fsfsfs.boot.system.controller" additivity="true" level="${log.level.controller}">
        <appender-ref ref="ASYNC_CONTROLLER_APPENDER"/>
    </logger>
    <logger name="top.fsfsfs.boot.system.service" additivity="true" level="${log.level.service}">
        <appender-ref ref="ASYNC_SERVICE_APPENDER"/>
    </logger>
    <logger name="top.fsfsfs.boot.system.mapper" additivity="false" level="${log.level.mapper}">
        <appender-ref ref="ASYNC_MAPPER_APPENDER"/>
    </logger>
    <logger name="top.fsfsfs.boot.system.mapper" additivity="false" level="${log.level.mapper}">
        <appender-ref ref="ASYNC_MAPPER_APPENDER"/>
    </logger>

</configuration>
